# Pinterest Integration Test Environment Configuration
# Copy this file to .env.integration and fill in your Pinterest API credentials

# Enable integration tests
PINTEREST_INTEGRATION_TESTS=true

# Pinterest API Credentials (Required)
# Get these from https://developers.pinterest.com/
PINTEREST_CLIENT_ID=your_pinterest_client_id_here
PINTEREST_CLIENT_SECRET=your_pinterest_client_secret_here
PINTEREST_ACCESS_TOKEN=your_pinterest_access_token_here
PINTEREST_REFRESH_TOKEN=your_pinterest_refresh_token_here

# Optional Configuration
PINTEREST_API_BASE_URL=https://api.pinterest.com/v5
PINTEREST_SANDBOX_MODE=false
PINTEREST_TEST_ACCOUNT_ID=

# Test Data Management
PINTEREST_CLEANUP_TEST_DATA=true
PINTEREST_PRESERVE_TEST_BOARDS=false

# Performance Testing Configuration
PINTEREST_MAX_RESPONSE_TIME=5000
PINTEREST_MAX_CONCURRENT_REQUESTS=5
PINTEREST_MAX_BATCH_SIZE=25

# Debug Configuration
DEBUG=pinterest:*
